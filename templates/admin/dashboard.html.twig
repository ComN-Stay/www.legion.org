{% extends 'admin/base_admin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header bg-gradient-primary text-white">
            <h3>Statistiques</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <p class="card-text">{{ associations }} association{% if associations > 1 %}s{% endif %} actives</p>
                    <p class="card-text">{{ eleveurs }} éleveur{% if eleveurs > 1 %}s{% endif %} actifs</p>
                    <p class="card-text">{{ adverts }} annonce{% if adverts > 1 %}s{% endif %} en ligne</p>
                    <p class="card-text">Autre statistique</p>
                    <p class="card-text">Autre statistique</p>
                    <p class="card-text">Autre statistique</p>
                </div>
                <div class="col-9">
                    <div class="text-end mb-2">
                        <div class="form-row d-flex justify-content-end align-items-center">
                            <button type="button" class="btn btn-info btn-sm _changeStats" data-start="{{ week }}">Semaine</button>
                            <button type="button" class="btn btn-info btn-sm mx-2 _changeStats" data-start="{{ month }}">Mois</button>
                            <button type="button" class="btn btn-info btn-sm mr-2 _changeStats" data-start="{{ year }}">Année</button>
                            <label class="form-label" for="startStats">Statistiques du</label> 
                            <input class="form-control mx-2" type="date" id="startStats" value="{{ lastMounth }}"> 
                            <label class="form-label" for="endStats">au</label> 
                            <input class="form-control mx-2" type="date" id="endStats" value="{{ today }}">
                            <button type="button" class="btn btn-info btn-sm _changeStats">Voir</button>
                        </div>
                    </div>
                    <div id="chartStat">
                        {{ render(path('app_statistics_admin')) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        {% if boxes.associations %}
            <div class="card">
                <div class="card-header bg-gradient-primary text-white">
                    <h3>Associations</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ boxes.associations }} association{% if boxes.associations > 1 %}s{% endif %} en attente de validation</p>
                    <a href="{{ path('app_company_admin_index', {'idType': 1, 'status': 0}) }}" class="btn btn-primary">Voir la liste</a>
                </div>
            </div>
        {% endif %}

        {% if boxes.eleveurs %}
            <div class="card">
                <div class="card-header bg-gradient-primary text-white">
                    <h3>Eleveurs</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ boxes.eleveurs }} éleveur{% if boxes.eleveurs > 1 %}s{% endif %} en attente de validation</p>
                    <a href="{{ path('app_company_admin_index', {'idType': 2, 'status': 0}) }}" class="btn btn-primary">Voir la liste</a>
                </div>
            </div>
        {% endif %}

        {% if boxes.adverts %}
            <div class="card">
                <div class="card-header bg-gradient-primary text-white">
                    <h3>Annonces</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ boxes.adverts }} annonce{% if boxes.adverts > 1 %}s{% endif %} en attente de validation</p>
                    <a href="{{ path('app_adverts_admin_index') }}/1" class="btn btn-primary">Voir la liste</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}