{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <h1>{{ page_title }}</h1>

    <table class="table _datatable table-striped table-bordered">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Lof</th>
                <th>Type d'annonce</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for advert in adverts %}
            <tr>
                <td>{{ advert.Title }}</td>
                <td>{{ advert.shortDescription }}</td>
                <td>{{ advert.lof ? 'Oui' : 'Non' }}</td>
                <td>{{ advert.isPro ? 'Pro' : 'Asso' }}</td>
                <td class="action_cell">
                    <a href="{{ path('app_adverts_admin_show', {'id': advert.id}) }}"><i class="fa-solid fa-eye fa-lg"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
