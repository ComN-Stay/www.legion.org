<form method="post" action="{{ path('app_tags_admin_delete', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn btn-danger btn-xl _deleteBtn mr-3"><i class="fa-solid fa-trash-can fa-lg text-white mr-3"></i>Supprimer ce tag</button>
</form>
