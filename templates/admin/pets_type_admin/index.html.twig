{% extends 'admin/base_admin.html.twig' %}

{% block title %}Types d'animaux{% endblock %}

{% block body %}
    <h1>Types d'animaux</h1>

    <table class="table _datatable table-striped table-bordered">
        <thead>
            <tr>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
        {% for pets_type in pets_types %}
            <tr>
                <td>{{ pets_type.name }}</td>
                <td class="action_cell">
                    <a href="{{ path('app_pets_type_admin_edit', {'id': pets_type.id}) }}"><i class="fa-solid fa-pen-to-square fa-lg"></i></a>
                    <form class="form_list" method="post" action="{{ path('app_pets_type_admin_delete', {'id': pets_type.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pets_type.id) }}">
                        <button class="btn neg-1 _deleteBtn"><i class="fa-solid fa-trash-can fa-lg"></i></button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun r√©sultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pets_type_admin_new') }}" class="btn btn-info btn-lg">Nouveau type d'animal</a>
{% endblock %}
