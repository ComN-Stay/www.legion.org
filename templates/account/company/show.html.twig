{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <h1>Company</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ company.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ company.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.address }}</td>
            </tr>
            <tr>
                <th>Additional_address</th>
                <td>{{ company.additionalAddress }}</td>
            </tr>
            <tr>
                <th>Zip_code</th>
                <td>{{ company.zipCode }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ company.town }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ company.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ company.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ company.latitude }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ company.logo }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ company.facebook }}</td>
            </tr>
            <tr>
                <th>Tweeter</th>
                <td>{{ company.tweeter }}</td>
            </tr>
            <tr>
                <th>Instagram</th>
                <td>{{ company.instagram }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description }}</td>
            </tr>
            <tr>
                <th>Short_description</th>
                <td>{{ company.shortDescription }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_company_index') }}">back to list</a>

    <a href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>

    {{ include('company/_delete_form.html.twig') }}
{% endblock %}
